{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "magicoli/agnstk",
    "type": "project",
    "description": "AGNSTK Application Template - Write once, deploy anywhere",
    "keywords": [
        "agnstk",
        "cms",
        "framework",
        "cross-platform"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "ExampleApp\\": "src/"
        }
    },
    "scripts": {
        "dev": "cd core && composer run dev",
        "test": "cd core && composer run test",
        "agnstk-update": [
            "@php core/artisan agnstk:backup-protected",
            "git subtree pull --prefix=core https://github.com/magicoli/agnstk-core.git master --squash",
            "@php core/artisan agnstk:restore-protected"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
